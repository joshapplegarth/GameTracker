@inject IUserRepository _userRepository

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:lightgray">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-4">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <strong>Game Tracker</strong>  </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-0">
                        @if (_userRepository.IsUserLoggedIn())
                        {
                            <li class="nav-item">
                                <a asp-controller="Location" asp-action="Index" class="btn btn-sm btn-outline-primary ml-2 mr-2">
                                    <strong>Locations</strong>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="ChangePassword" class="btn btn-sm btn-outline-primary ml-2 mr-2">
                                    <strong> Change Password </strong>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="Logout" class="btn btn-sm btn-outline-primary ml-2 mr-2">
                                    <strong>Logout</strong>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="Login" class="btn btn-sm btn-outline-primary ml-2 mr-2">
                                    <strong>Login</strong>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="Register" class="btn btn-sm btn-outline-primary ml-2 mr-2">
                                    <strong>Register</strong>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - GameTracker
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
