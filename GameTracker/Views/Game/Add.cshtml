@model Game

<fieldset class="border d-inline-block p-3 shadow">
    <h1> Add Game </h1>
    <form method="post">
        <input type ="hidden" asp-for="Id" />
        <input type="hidden" asp-for="LocationId" />
        <table>
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <thead>
                    <tr>
                        <td colspan="2">
                            <div asp-validation-summary="All" class="text-danger"> </div>
                        </td>
                    </tr>
                    <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>
                </thead>
            }
            <tbody>
                <tr>
                    <th class="pr-1 text-right"> Type: </th>
                    <td class="pl-1"> <input asp-for="Type" class="rounded" required /> </td>
                </tr>
                <tr>
                    <th class="pr-1 text-right"> Gender: </th>
                    <td class="pl-1"> <input asp-for="Gender" class="rounded" required /> </td>
                </tr>
                <tr>
                    <th class="pr-1 text-right"> Weight: </th>
                    <td class="pl-1"> <input asp-for="Weight" class="rounded" type="number"  /> </td>
                </tr>
                <tr>
                    <th class="pr-1 text-right"> Date: </th>
                    <td class="pl-1"> <input asp-for="Date" class="rounded" required /> </td>
                </tr>
            </tbody>
            <tfoot>
                <tr> <td class="pl-2 pr-2" colspan="2"> <hr /> </td> </tr>
                <tr>
                    <td class="text-center" colspan="2">
                        <input class="btn btn-sm btn-outline-warning mr-1 text-dark" type="submit" value="Add" />
                        <a asp-controller="Location" asp-action="Details" asp-route-id="@Model.LocationId" class="btn btn-sm btn-outline-primary ml-1"> Cancel </a>
                    </td>
                </tr>
            </tfoot>
        </table>

    </form>
</fieldset>