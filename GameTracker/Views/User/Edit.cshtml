@model User

<h1> Edit User </h1>
<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <br />
    First Name:
    <input asp-for="Firstname" />
    <br />
    Last Name:
    <input asp-for="Lastname" />
    <br />
    Email:
    <input asp-for="Email" />
    <br />
    Password:
    <input asp-for="Password" />
    <br />

    <input type="submit" value="Update User" class="btn btn-sm btn-success" />
    <a asp-controller="User" asp-action="Details" asp-route-id="@Model.Id" class="btn  tbn-sm btn-secondary"> Cancel </a>
</form>